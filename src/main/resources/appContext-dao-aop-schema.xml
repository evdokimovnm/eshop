<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans.xsd">




    <!--Transaction Manager-->
    <bean id="txManager" class="net.evdokimov.eshop.dao.impl.jpa.tx.TransactionManagerImpl" scope="singleton"/>

    <!--ProductDao-->
    <bean id="productDao" class="net.evdokimov.eshop.dao.impl.jpa.ProductDaoImpl" scope="singleton"/>

    <!--ProductTypeDao-->
    <bean id="productTypeDao" class="net.evdokimov.eshop.dao.impl.jpa.ProductTypeDaoImpl" scope="singleton"/>

    <!--UserDao-->
    <bean id="userDao" class="net.evdokimov.eshop.dao.impl.jpa.UserDaoImpl" scope="singleton"/>

    <!--OrderDao-->
    <bean id="orderDao" class="net.evdokimov.eshop.dao.impl.jpa.OrderDaoImpl" scope="singleton"/>


</beans>

